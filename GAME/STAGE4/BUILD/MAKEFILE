PROGNAME = outlaw.tos

CC = cc68x
AS = gen
CD = cd
RM = Rm

CFLAGS= -I..\src\include \
-I..\assets
 
ASFLAGS = -D -L2

C_OBJ = \
obj\events.o \
obj\model.o \
obj\raster.o \
obj\renderer.o \
obj\tst_rend.o \
obj\util.o 

ASM_OBJ = \
obj\clear.o

OBJ = $(C_OBJ) $(ASM_OBJ)

$(PROGNAME): $(OBJ)
	$(CC) -o $(PROGNAME) $(OBJ)

obj\events.o: ..\src\c\events.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\model.o: ..\src\c\model.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\raster.o: ..\src\c\raster.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\renderer.o: ..\src\c\renderer.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\tst_rend.o: ..\src\c\tst_rend.c
	$(CC) $(CFLAGS) -c $< -o $@
obj\util.o: ..\src\c\util.c
	$(CC) $(CFLAGS) -c $< -o $@

obj\clear.o: ..\src\asm\clear.s
	$(AS) $(ASFLAGS) $< -o$@

clean:
	!$(RM) $(PROGNAME) $(OBJ)
